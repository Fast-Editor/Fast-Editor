{
  "name": "fast-editor",
  "version": "1.0.0",
  "description": "Blazingly fast Monaco-based code editor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "NODE_ENV=development electron ."
  },
  "keywords": [
    "editor",
    "monaco",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "monaco-editor": "^0.45.0",
    "node-pty": "^1.0.0",
    "vscode-languageclient": "^9.0.1"
  },
  "build": {
    "appId": "com.fasteditor.app",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
